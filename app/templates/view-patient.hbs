{{outlet}}
<Navbar />
<div class="container">
    <form id="myForm">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="{{@model.name}}"
                readonly>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="Address"
                value="{{@model.address}}" readonly>
        </div>
        <div class="form-group">
            <label for="gender">Gender</label>
            <input type="text" class="form-control" id="gender" name="gender" placeholder="Gender"
                value="{{@model.gender}}" readonly>
        </div>
        <div class="form-group">
            <label for="dob">Date of Birth</label>
            <input type="text" class="form-control" id="dob" name="dob" placeholder="Date of Birth"
                value="{{@model.dob}}" readonly>
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <input type="text" class="form-control" id="age" name="age" placeholder="Age" value="{{@model.age}}"
                readonly>
        </div>
        <div class="form-group">
            <label for="symptoms">Symptoms</label>
            <input type="text" class="form-control" id="symptoms" name="symptoms" placeholder="Symptoms"
                value="{{@model.symptoms}}" readonly>
        </div>
        <div class="form-group">
            <label for="prescribedMedicines">Prescribed Medicines</label>
            <input type="text" class="form-control" id="prescribedMedicines" name="prescription"
                placeholder="Prescribed Medicines" value="{{@model.prescription}}" readonly>
        </div>
        <div class="form-group">
            <label for="lastvisiteddate">Last visited date</label>
            <input type="text" class="form-control" id="lastvisiteddate" name="visitedDate"
                placeholder="Last visited date" value="{{@model.visitedDate}}" readonly>
        </div>
        <LinkTo type="button" class="btn btn-primary" @route="dashboard">Back
        </LinkTo>
    </form>
</div>